<div class='columns battle'>
  <div class='column'>

    <figure class='hero1'>
      {{#each heroes}}
        <div>
          <div>
            <figure class='image is-square'>
              <img src='{{imagesrc}}' alt='Superhero image' />
            </figure>
          </div>
          <div class='card-content'>
            <div class='content'>
              <p>
                Name:
                {{name}}
              </p>
              <p>
                Alias:
                {{alias}}
              </p>
              <p>
                Strength:
                {{str}}
              </p>
              <p>
                Intelligence:
                {{int}}
              </p>
              <p>
                Speed:
                {{speed}}
              </p>
            </div>
          </div>
        </div>
      {{/each}}
    </figure>
  </div>
  <div class='column'>
    <figure class='fightSim' id='fight-sim'>
      <button class='button is-dark' id='commence-battle'>Let's BATTLE!</button>
      {{! fun terminal thing here }}
      <p class='battle-info' id='stats'></p>
      <p class='battle-info' id='attack'></p>
      <p class='battle-info' id='hp'></p>

    </figure>
  </div>
  <div class='column'>
    <figure class='hero2'>
      <div class='card glow'>
        <div class='card-image'>
          <figure class='image is-square' id='enemy-image'>

          </figure>
        </div>
        <div class='card-content'>
          <div class='content'>
            <p id='enemy-name'>
            </p>
            <p id='enemy-alias'>
            </p>
            <p id='enemy-strength'>
            </p>
            <p id='enemy-intelligence'>
            </p>
            <p id='enemy-speed'>
            </p>
          </div>
        </div>
      </div>
    </figure>
  </div>
</div>
<script src='/js/heroes.js'></script>
<script src='/js/battle.js'></script>