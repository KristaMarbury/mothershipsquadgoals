<div class='columns is-half teampage'>
  <div class='column'>
    <div class='welcomeBack'>
      <p class='title'>Welcome back, {{name}}!</p>
      <p>What would you like to do?</p>
      <button class='button teampageButtons' id='editsquad-btn'>Edit My Squad</button>
      <button class='button teampageButtons' id='highscores-btn'>View Highscores</button>
      <button class='button teampageButtons' id='battle-btn'>Battle</button>
    </div>
  </div>
  <div class='column'>
    <div class='yourSquad'>
      <p class='title'>Your Squad</p>
      {{#each heroes}}
        <div class='card'>
          <div class='card-image'>
            <figure class='image is-4by3'>
              <img src='{{imagesrc}}' alt='Superhero image' />
            </figure>
          </div>
          <div class='card-content'>
            <div class='content'>
              <p>
                Name:
                {{name}}
              </p>
              <p>
                Alias:
                {{alias}}
              </p>
              <p>
                Strength:
                {{str}}
              </p>
              <p>
                Intelligence:
                {{int}}
              </p>
              <p>
                Speed:
                {{speed}}
              </p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>

<script src='/js/teampage.js'></script>