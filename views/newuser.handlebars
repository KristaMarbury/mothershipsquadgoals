<form class='box is-half'>
  <div class='field'>
    <label class='label'>Name</label>
    <div class='control'>
      <input
        class='input'
        id='name-signup'
        type='name'
        placeholder='Your name here'
      />
    </div>
  </div>

  <div class='field'>
    <label class='label'>Email</label>
    <div class='control'>
      <input
        class='input'
        id='email-signup'
        type='email'
        placeholder='e.g. alex@example.com'
      />
    </div>
  </div>

  <div class='field'>
    <label class='label'>Password</label>
    <div class='control'>
      <input
        class='input'
        id='password-signup'
        type='password'
        placeholder='********'
      />
    </div>
  </div>

  <button class='button is-primary' id='user-submit'>Create Account</button>
</form>

<script src='/js/newuser.js'></script>